/* pages/index/index.wxss */

.nav {
   position: fixed;
   top: 0;
   left: 0;
   z-index: 99;
}

.recommend {
    display: block;
    margin-top: 110rpx;
}

.add {
    margin-right: 20rpx;
}

.to-catalog {
    display: inline-block;
    border: 2rpx solid #000;
    padding: 10rpx 20rpx;
    font-size: 28rpx;
}

.loading-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.loading {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}