<!--components/nineImg/cmp.wxml-->
<!-- 九宫格图片组件 -->


<view class="container">

    <view class="img-container">
        <image class="image"
            wx:for="{{imgArr}}" 
            wx:key="*this"
            wx:if="{{index < 9}}"        
            src="{{item}}" 
            catch:tap="onTap"
            data-index="{{index}}"
        />
        <text class="img-num"
             wx:if="{{imgArr.length > 9}}" 
        >{{imgArr.length}}</text>
    </view>
    <view class="text-container">
        <text>{{mainTitle}}</text>
    </view>

</view>